@page "/numbers"

<PageTitle>Numbers</PageTitle>

<h1>Numbers</h1>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th scope="col">English Number</th>
      <th scope="col">Polish Number</th>
      <th scope="col">Age</th>
      <th scope="col">Money</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var definition in definitions)
    {
      <tr>
        <td>@definition.EnglishNumber</td>
        <td>@definition.PolishNumber</td>
        <td>@definition.PolishAge</td>
        <td>@definition.PolishMoney</td>
      </tr>
    }
  </tbody>
</table>

@code {
  private List<DefinitionWithNumber> definitions = new List<DefinitionWithNumber>
  {
    new DefinitionWithNumber { EnglishNumber = "1", PolishNumber = "Jeden", PolishAge = "Lat",PolishMoney = "Złoty" },
    new DefinitionWithNumber { EnglishNumber = "2", PolishNumber = "Dwa", PolishAge = "Lata",PolishMoney = "Złote" },
    new DefinitionWithNumber { EnglishNumber = "3", PolishNumber = "Trzy", PolishAge = "Lata",PolishMoney = "Złote" },
    new DefinitionWithNumber { EnglishNumber = "22/23/24/32/33/32/42/43/44", PolishNumber = "", PolishAge = "Lata",PolishMoney = "Złote" }
  };
}
